<%= form_with model:@customer, url:info_update_path do |f| %>

  <div class="field">
    <p>名前</p>
    <%= f.label "姓" %>
    <%= f.text_field :family_name, class: "last_name" %>
    <%= f.label "名" %>
    <%= f.text_field :first_name, class: "first_name" %>
  </div>

   <div class="field">
    <p>フリガナ</p>
    <%= f.label "セイ" %>
    <%= f.text_field :family_kana, class: "last_name_kana" %>
    <%= f.label "メイ" %>
    <%= f.text_field :first_kana, class: "first_kana" %>
  </div>

  <div class="field">
    <%= f.label "メールアドレス" %>
    <%= f.email_field :email, class: "email" %>
  </div>

  <div class="field">
    <%= f.label "郵便番号（ハイフンなし）" %>
    <%= f.text_field :postal_code, class: "postal_code" %>
  </div>

  <div class="field">
    <%= f.label "住所" %>
    <%= f.text_field :street_address, class: "address" %>
  </div>

  <div class="field">
    <%= f.label "電話番号（ハイフンなし）" %>
    <%= f.text_field :tel_number, class: "telephone_number" %>
  </div>

  <%= f.submit '編集する' %>
<% end %>