
<h4>商品詳細</h4>
<% if @item.image.attached? %>
  <%= image_tag @item.image, size:"200x200" %>
<% else %>
  <%= image_tag 'no_image', size: "200x200" %>
<% end %>
<h4>商品名</h4>
<%= @item.name %>
<h4>商品紹介</h4>
<%= @item.introduction %>
<h4>税込価格(税抜価格)</h4>
<%= @item.with_tax_price %>


<%= form_with model: @cart_item, url: public_cart_items_path do |f| %>
<%= f.hidden_field :item_id, :value => @item.id  %>
<%= f.select :amount, [['いち',1], ['に',2], ['さん',3]], { include_blank: '数量選択'} %>
<%= f.submit 'カートに入れる' %>
<% end %>