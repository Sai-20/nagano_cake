  <h1>注文情報入力</h1>

  <%= form_with model: @order, url: new_public_order_path  do |f| %>
  <h4> 支払方法 </h4>

  <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
  <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>

  <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
  <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>

  <h4>  お届け先の選択  </h4>
  <%= f.select :address_id, options_from_collection_for_select(current_customer.addresses, :id, :address_display) %>

  <%= form_with model: @address, url: public_addresses_path, method: :post do |f| %>

  <div class="field">

    <%= f.label :postal_code, "郵便番号（ハイフンなし）" %>
    <%= f.text_field :postal_code, class: "postal_code" %>
  </div>

  <div class="field">
    <%= f.label :address, "住所" %>
    <%= f.text_field :address, class: "address" %>
  </div>

  <div class="field">
    <%= f.label :name, "宛名" %>
    <%= f.text_field :name, class: "name" %>
  </div>

  <%= f.submit '新規登録'%>
  <% end %>

<% end %>
