<h3>配送先登録/一覧</h3>


  <%= form_with model: @address do |f| %>

  <div class="field">

    <%= f.label :postal_code, "郵便番号（ハイフンなし）" %>
    <%= f.text_field :postal_code, class: "postal_code" %>
  </div>

  <div class="field">
    <%= f.label :address, "住所" %>
    <%= f.text_field :address, class: "address" %>
  </div>

  <div class="field">
    <%= f.label :name, "宛名" %>
    <%= f.text_field :name, class: "name" %>
  </div>

  <%= f.submit '変更を保存'%>
  <% end %>

