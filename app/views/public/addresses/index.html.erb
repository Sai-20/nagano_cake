<h3>配送先登録/一覧</h3>


  <%= form_with model: @address, url: public_addresses_path, method: :post do |f| %>

  <div class="field">

    <%= f.label :postal_code, "郵便番号（ハイフンなし）" %>
    <%= f.text_field :postal_code, class: "postal_code" %>
  </div>

  <div class="field">
    <%= f.label :address, "住所" %>
    <%= f.text_field :address, class: "address" %>
  </div>

  <div class="field">
    <%= f.label :name, "宛名" %>
    <%= f.text_field :name, class: "name" %>
  </div>

  <%= f.submit '新規登録'%>
  <% end %>


<table>
  <tr>
    <th> 郵便番号　</th>
    <th>　住所　</th>
    <th>　宛名　</th>
  </tr>
  <% @addresses.each do |address| %>
  <tr>
    <td><%= address.postal_code%></td>
    <td><%= address.address %></td>
    <td><%= address.name %></td>

    <td><%= link_to "編集する",  edit_public_address_path(address.id) %></td>
    <td><%= link_to "削除する",  public_address_path(address.id), method: :delete %></td>
  </tr>
  <% end %>
</table>